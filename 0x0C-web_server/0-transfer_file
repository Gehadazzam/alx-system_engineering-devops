#!/usr/bin/env bash
#transfer a file from client to server
if [ $# -ne 4 ]; 
then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi
file_path="$1"
ip="$2"
username="$3"
key_path="$4"
export SSH_STRICT_HOSTKEY_CHECKING=no
scp -i "$key_path" "$file_path" "$username@$ip:~/"
